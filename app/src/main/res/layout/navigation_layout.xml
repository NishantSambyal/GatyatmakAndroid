                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/instagram"
                    android:onClick="Instagram"
                    android:layout_margin="10dp"/>
                </LinearLayout>

                <LinearLayout
